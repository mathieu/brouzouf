<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form-horizontal") do |f| %>
  <%= devise_error_messages! %>
<fieldset>
  <p><%= f.label :name %>
  <%= f.text_field :name, :class => "nice input-text" %></p>

  <p><%= f.label :email %>
  <%= f.email_field :email, :class => "nice input-text"%></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, :class => "nice input-text" %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class => "nice input-text"%></p>
	</fieldset>

  <p><%= f.submit "Sign up", :class => "btn btn-primary" %></p> 

<% end %>

<%= render :partial => "devise/shared/links" %>
