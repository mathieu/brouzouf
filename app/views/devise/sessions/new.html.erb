<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :login %>
  <%= f.text_field :login, :class => "nice input-text" %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, :class => "nice input-text" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p><%= f.submit "Sign in", :class => "large button" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>