<h1>Editing bet</h1>

<%= render 'form' %>

<%if @bet.state == "CREATION" %>
    <%= form_tag(:controller => "bets", :action => "set_bet_open", :method => "post") do %>
        <%= submit_tag("Open Bet") %>
    <%end%>
<%end%>

<%if @bet.state == "OPEN" %>
    <%= form_tag(:controller => "bets", :action => "set_bet_close", :method => "post") do %>
        <%= submit_tag("Close Bet") %>
    <%end%>
<%end%>

<%if @bet.state == "CLOSE" %>
    <%= form_tag(:controller => "bets", :action => "set_bet_open", :method => "post") do %>
        <%= submit_tag("Open Bet") %>
    <%end%>
<%end%>


<h2>Choices</h2>

<%= link_to "Add Choice for this bet", new_bet_choice_url(@bet)  %>

<%if @bet.choices.count == 0 %>
	<p>No choice for this bet.</p>
<%else%>
	<% @bet.choices.each do |choice| %>
		<ul>
			<li><%=choice.description%> - <%= link_to 'Edit', edit_bet_choice_url(@bet, choice) %></li>
		</ul>
	<%end%>
<%end%>

<br/>
