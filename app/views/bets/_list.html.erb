<table>
  <tr>
    <th align="left">Title</th>
    <th align="left">Description</th>
    <th align="left">Remaining time</th>
    <th align="left">User</th>
  </tr>

<% @bets.each do |bet| %>
<% if bet.state == 'OPEN' && bet.expiration_date > Time.now%>
  <tr>
    <td><%= link_to bet.title, bet %></td>
    <td><%= bet.description %></td>
    <td><%= distance_of_time_in_words(Time.now,bet.expiration_date) %></td>
    <td><%= link_to bet.user.name, user_path(bet.user) %></td>
  </tr>
<% end %>
<% end %>
</table>