<h1><%= @bet.title %></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Description:</b>
  <%= @bet.description %>
</p>

<p>
  <b>Expiration date:</b>
  <%= @bet.expiration_date %>
</p>

<p>
  <b>User:</b>
  <%= link_to @bet.user.name, user_path(@bet.user)  %>
</p>


<h2>Choices</h2>


<%if @bet.choices.count == 0 %>
	No choice for this bet.
<%else%>
	<% @bet.choices.each do |choice| %>
		<ul>
			<li><%=choice.description%></li>
		</ul>
	<%end%>
<%end%>