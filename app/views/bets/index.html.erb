<h1>Listing bets</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Expiration date</th>
    <th>User</th>
    <th></th>
   </tr>

<% @bets.each do |bet| %>
  <tr>
    <td><%= bet.title %></td>
    <td><%= bet.description %></td>
    <td><%= bet.expiration_date %></td>
    <td><%= link_to bet.user.name, user_path(bet.user) %></td>
    <td><%= link_to 'Show', bet %></td>
  </tr>
<% end %>
</table>

<br />

