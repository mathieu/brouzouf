@import url(http://fonts.googleapis.com/css?family=Marvel:700);
@import url(http://fonts.googleapis.com/css?family=Fontdiner+Swanky);
@import url(http://fonts.googleapis.com/css?family=Varela+Round);

body {
	background-color: #fff;
	color: #333; 
	margin: 10px;
	font-family: 'Varela Round', sans-serif;
}

a { color: #F32A6A; text-decoration: none;}
a:visited { color: #F32A6A; }
a:hover { color: #FF0000; background-color:#C7AAAA; }


h1 { margin: 0px 0 20px 0; color: #B317DA; font-size: 2.0em; font-family: /*'Marvel'*/ 'Fontdiner Swanky', sans-serif;}
h2 { margin: 20px 0 20px 0; color: #73088E; font-size: 1.4em; font-family: /*'Marvel'*/ 'Fontdiner Swanky', sans-serif;}

input[type="submit"] {
  font-size: 16px;
    padding: 8px;
}

/*Header*/
#hd { 
	background-color: #C7AAAA; -moz-border-radius: 10px; border-radius: 10px; 
	margin-bottom: 10px;
}

#hd h1 {
	color: #5F7A47; 
	font-size: 5.4em; 
	padding: 25px;
	padding-left: 75px;
	margin: 0
}

#hd h1 a {color: inherit; }
#hd #sign { margin: 35px 35px 0 0;}

