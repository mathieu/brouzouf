#bd a {color: inherit; text-decoration: none;}*/

#menu {
	float: left;
	list-style: none;
	margin: 0;
	padding: 0;
	width: 100%;	
	background-color: #C7AAAA; 
	-moz-border-radius: 10px; 
	border-radius: 10px; 
	font-family: /*'Marvel'*/ 'Fontdiner Swanky', sans-serif;
	margin-bottom: 10px;
	
}

#menu li {
	float: left;
	margin-left: 12px;
	padding: 0;
	list-style: none;
	
}
#menu a {
	background: #C7AAAA bottom right no-repeat;
	color: #5F7A47;
	//display: block;
	float: left;
	margin: 0;
	padding: 8px 12px;
	text-decoration: none;
	
}
#menu a:hover {
	background: #2580a2  url(<%= asset_path 'hover.gif' %>) bottom center no-repeat;
	color: #fff;
	padding-bottom: 8px;      
}

#main {
		
}

#notice { color: green; }
.choices li {list-style: none; margin: 10px;}
.choices li span {font-size: 1.3em}

.choices  .winner {background-color: #C3FA7C }

th {
	padding-left: 10px;
	padding-right: 10px;
	
}
td {
	padding-left: 10px;
	padding-right: 10px;
	
}
tr:nth-child(odd)		{ background-color:#eee; }
tr:nth-child(even)		{ background-color:#fff; }
